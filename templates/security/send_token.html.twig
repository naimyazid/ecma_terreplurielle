{% extends 'security/index.html.twig' %}
{% block body %}
    <section id="header" class="jumbotron jumbotron-fluid text-center">
        <img src="{{ asset('images/logo/TerrePlurielle.png') }}" class="d-inline-block align-top" alt="">
    </section>

    <section class="container connexion">


        <div class="form-signin">
        {% for message in app.flashes('danger') %}
                <div class="row d-flex justify-content-center">
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                </div>
        {% endfor %}
            <div class="title-content">
                <h1>Activer mon compte</h1>
                <hr>
            </div>
            {{ form_start(formToken) }}
            {{ form_row(formToken.email) }}
            <div class="btn-secu">
                <button class="btn btn-md" type="submit">envoyer</button>
                <a class="btn btn-md" href="{{ path('app_login') }}">Retour</a>
            </div>
        
            {{ form_end(formToken) }}
        </div>

    </section>


{% endblock %}