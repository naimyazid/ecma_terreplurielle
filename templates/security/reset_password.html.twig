{% extends 'security/index.html.twig' %}
{% block body %}
    <section id="header" class="jumbotron jumbotron-fluid text-center">
        <img src="{{ asset('images/logo/TerrePlurielle.png') }}" class="d-inline-block align-top" alt="">
    </section>

    <div class="container connexion">
        {% for message in app.flashes('danger') %}
            <div class="row d-flex justify-content-center">
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="row d-flex justify-content-center">
                <div class="alert alert-success">
                    {{ message }}
                </div>
            </div>
        {% endfor %}

           <div class="form-signin">
                <div class="title-content">
                    <h1>Mot de passe oubli√© </h1>
                <hr>
            </div>
            {{ form_start(formReset) }}
           
            {{ form_row(formReset.email) }}

            <div class="btn-secu">
                <a class="btn btn-md " type="submit">Envoyer</a>
                <a class="btn btn-md" href="{{ path('app_login') }}">Retour</a>
            </div>
            {{ form_end(formReset) }}
        </div>
    </div>

{% endblock %}