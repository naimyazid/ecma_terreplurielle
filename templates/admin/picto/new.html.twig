{% extends 'admin/index.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    <section id="header" class="jumbotron jumbotron-fluid text-center">
        <img src="{{ asset('images/logo/TerrePlurielle.png') }}" class="d-inline-block align-top" alt="">
    </section>

    <section class="container admin add-user">

        <div class="title-content">
            <h1>Ajouter un pictogramme</h1>
        </div>

        <article class="container-content edit">
            {{ form_start(form)}}
                {{form_rest(form)}}
            <div class="navbot-admin">
                <button class="btn">Ajouter</button>
                <a href="{{ path('admin_picto')}}" class="btn">Annuler</a>
            </div>    
            {{ form_end(form) }}
        </article>

    </section>
{% endblock %}

{% block javascripts %}
{{parent()}}
        <script>
            $('#pictogramme_imageFile').on('change',function(){
                //get the file name
                var fileName = $(this).val();
                //replace the "Choose a file" label
                $(this).next('.custom-file-label').html(fileName);
            })
        </script>
{% endblock %}
