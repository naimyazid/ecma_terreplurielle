{% extends 'admin/index.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    <section id="header" class="jumbotron jumbotron-fluid text-center">
        <img src="{{ asset('images/logo/TerrePlurielle.png') }}" class="d-inline-block align-top" alt="">
    </section>

    <section class="container admin">
        <div class="title-content">
            <h1>Liste des utilsateurs</h1>
            <hr>
        </div>

        <article class="container-content user">
            <div class="add">
            {{ knp_pagination_render(users)}}
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-striped text-center">
                    <thead>
                        <tr>
                            <td>Nom</td>
                            <td>Prenom</td>
                            <td>Nombre d'enregistrments audio</td>
                            <td>Fichiers audio</td>
                        </tr>
                    </thead>

                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.surname }}</td>
                            <td>{{ user.firstName }}</td>
                            <td>{{ user.audio | length }}</td>
                            <td>
                                <a id="edit" class="action" href="{{ path('admin_audios', {id: user.id})}}"><i class="far fa-file-audio"></i></a>
                            <td>
                        </tr>
                    {% endfor %}   
                    </tbody>
                </table>
            </div>
        </article>

    </section>
{% endblock %}